@{
    ViewBag.Title = "Instituto Alfa - Alumno";
}

    <div class="row">
        <div class="col-md-12">
            <h1>Nuevo alumno</h1>
            <hr />
        </div>
        <div class="col-md-12">
            <form class="form-horizontal" method="post" action="@Url.Action("CreateAlumno", "Alumno")">                
                <input type="hidden" name="id" class="form-control" id="id" value="-1">                    
                <div class="form-group">
                    <label for="rut" class="col-sm-2 control-label">Rut:</label>
                    <div class="col-sm-10">
                        <input type="text" name="rut" class="form-control" id="rut" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="nombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        <input type="text" name="nombre" class="form-control" id="nombre" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="nacimiento" class="col-sm-2 control-label">Nacimiento:</label>
                    <div class="col-sm-10">
                        <input type="date" name="nacimiento" class="form-control" id="nacimiento" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="genero" class="col-sm-2 control-label">Género:</label>
                    <div class="col-sm-10">
                        <select name="genero" class="form-control" id="genero" required>
                            <option value="0">Seleccionar...</option>
                            <option value="M">M</option>
                            <option value="F">F</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a class="btn btn-default" role="button" href="@Url.Action("Index", "Alumno")">Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>    
