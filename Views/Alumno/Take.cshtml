@{
    ViewBag.Title = "Instituto Alfa - Alumno";
}

    <div class="row">
        @Html.Partial("_Flash")
        <div class="col-md-3">
            <h2>@ViewBag.Alumno.nombre</h2>
            <hr />
            <form class="form-inline">
                <input type="hidden" name="id" class="form-control" id="id_alumno" value="@ViewBag.Alumno.id">
                <div class="form-group">
                    <label style="color:#ababab">Rut:</label>
                    <label class="form-label">@ViewBag.Alumno.rut</label>
                </div>
                <br />
                <div class="form-group">
                    <label style="color:#ababab">Nombre:</label>
                    <label class="form-label">@ViewBag.Alumno.nombre</label>
                </div>
                <br />
                <div class="form-group">
                    <label style="color:#ababab">Nacimiento:</label>
                    <label class="form-label">@ViewBag.Alumno.nacimiento.ToShortDateString()</label>
                </div>
                <br />
                <div class="form-group">
                    <label style="color:#ababab">Género:</label>
                    <label class="form-label">@ViewBag.Alumno.genero</label>
                </div>
                <br />
                <br />                                
                <a class="btn btn-info" role="button" href="@Url.Action("ViewAlumno", "Alumno", new { id_alumno = @ViewBag.Alumno.id })">Volver</a>                
            </form>
            <h3 style="display:none">Selección</h3>
            <form id="seleccion" style="display:none">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Año:</label>
                    <select class="form-control" id="anyo" value="0">
                        <option value="0">Seleccionar...</option>
                        @foreach (var Anyo in ViewBag.Anyos)
                        {
                            <option value="@Anyo.id">@Anyo.anyo</option>

                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect2">Bimestre:</label>
                    <select multiple class="form-control" id="bimestre">
                        @foreach (var Bimestre in ViewBag.Bimestres)
                        {
                            <option value="@Bimestre.id">@Bimestre.nombre</option>

                        }
                    </select>
                </div>
                <button type="submit" id="consultar" class="btn btn-primary" style="float:right">Consultar</button>
                
                <a class="btn btn-info" role="button" style="float:left" href="@Url.Action("ViewAlumno", "Alumno", new { id_alumno = @ViewBag.Alumno.id })">Volver</a>
            </form>
        </div>
        <div class="col-md-9">
            <h2>Tomar Curso</h2>
            <hr />
            <table width="100%" id="cursos">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Código</th>
                        <th>Asignatura</th>
                        <th>Profesor</th>
                        <th>Sala</th>
                        <th>Estado</th>
                        <th>Tomar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Curso in ViewBag.Cursos)
                    {
                    <tr>
                        <td>@Curso.id</td>
                        <td>@Curso.anyo.anyo</td>
                        <td>@Curso.bimestre.nombre</td>
                        <td>@Curso.asignatura.nombre</td>
                        <td>@Curso.profesor.nombre</td>                        
                        <td>@Curso.estado</td>
                        <td>
                            <a href="@Url.Action("TakeCurso", "Alumno", new { id_alumno = ViewBag.Alumno.id, id_curso = Curso.id })">Tomar</a>                            
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>    
