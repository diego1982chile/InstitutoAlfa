<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Instituto Alfa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/datatablescss")    
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Instituto Alfa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Alumnos", "Index", "Alumno")</li>                    
                </ul>                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Instituto Alfa ASP.NET</p>
        </footer>
    </div>    

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatablesjs")
    @Scripts.Render("~/bundles/loadingoverlay")
    @Scripts.Render("~/bundles/alumnosindexjs")
    @Scripts.Render("~/bundles/cursosindexjs")

    @Scripts.Render("~/bundles/jquerycookiejs")
    @Scripts.Render("~/bundles/jqueryflashmessagejs")

    @RenderSection("scripts", required: false)

</body>
</html>
